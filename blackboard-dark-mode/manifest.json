{
  "manifest_version": 2,
  "name": "Canvas Dark Mode",
  "version": "2.0",
  "description": "Sets a dark theme for Canvas",

  "content_scripts": [
    {
      "matches": ["*://*.instructure.com/*"],
      "js": ["darkmode.js"]
    }
  ],

  "permissions": ["theme"],

  "browser_specific_settings": {
    "gecko": {
      "id": "private-window-theme@mozilla.org",
      "strict_min_version": "58.0"
    }
  }
}
